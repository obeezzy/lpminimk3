{
   "$schema": "https://json-schema.org/draft/2020-12/schema",
   "title": "Glyph Dictionary",
   "description": "A dictionary of glyphs for a 8x8 LED matrix array",
   "type": "object",
   "properties":{
      "glyphs":{
         "description": "Payload",
         "type":"object"
      },
      "fg_color": {
         "description": "Foreground color as hex value",
         "type":"string"
      },
      "bg_color": {
         "description":"Background color as hex value",
         "type":"string"
      }
   },
   "required": [ "glyphs" ]
}
